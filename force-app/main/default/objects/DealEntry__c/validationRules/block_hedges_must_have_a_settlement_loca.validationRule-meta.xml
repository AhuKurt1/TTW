<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>block_hedges_must_have_a_settlement_loca</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Product_Type__c, &apos;Block Hedge&apos;), ISBLANK(TEXT( Settlement_Location__c)))</errorConditionFormula>
    <errorDisplayField>Settlement_Location__c</errorDisplayField>
    <errorMessage>You must select a settlement location for Block Hedges.</errorMessage>
</ValidationRule>
