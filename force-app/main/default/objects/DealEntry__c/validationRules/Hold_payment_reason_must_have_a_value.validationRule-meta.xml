<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hold_payment_reason_must_have_a_value</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Hold_Payment__c ,  ISBLANK(TEXT( Hold_Payment_Reason__c)))</errorConditionFormula>
    <errorDisplayField>Hold_Payment_Reason__c</errorDisplayField>
